<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top">

    <EditText
        android:id="@+id/et_login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/et_bg_selector"
        android:hint="输入名称"
        android:lines="1"
        android:padding="10dp" />

    <EditText
        android:id="@+id/et_login_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_name"
        android:layout_margin="10dp"
        android:background="@drawable/et_bg_selector"
        android:hint="输入密码"
        android:lines="1"
        android:padding="10dp" />

    <EditText
        android:id="@+id/et_login_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_pass"
        android:layout_margin="10dp"
        android:background="@drawable/et_bg_selector"
        android:hint="输入token"
        android:lines="1"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_token"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        android:text="确认" />

</RelativeLayout>